CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c file1.c file2.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm

all: ${NAME}

${NAME}: ${OBJ}
    ${CC} ${CFLAGS} -o ${NAME} ${OBJ}

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: fclean all

.PHONY: clean oclean fclean re
