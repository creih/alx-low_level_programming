CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c = .o)
NAME = school
RM = rm -f
T_FILE = *~ .*~
EXE_FILE = $(NAME) $(OBJ)

.PHONY: all clean oclean fclean re

all: $(NAME)
$(NAME): $(OBJ)
	$(CC) -o $@ $^
%.o: %.c
	$(CC) -c -o $@ $<
clean:
	$(RM) $(T_FILE) $(EXE_FILE)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) $(T_FILE) $(EXE_FILE)
re: fclean all
